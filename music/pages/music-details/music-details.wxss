/* pages/music-details/music-details.wxss */
@import "../play-music/play-template/play-template.wxss";

.music-top {
  /*内边距为10px  */
  padding: 10px;
  /* 弹性盒子模型  */
  display: flex;
}

.music-top image {
  flex: 1;
  height: 200rpx;
}

.info {
  flex: 2;
  margin-left: 15px;
}

.info .title {
  display: block;
  font-size: 15px;
  margin-top: 10px;
}

.info .desc {
  font-size: 12px;
  color: #999;
}


/*区分*/


.music-list{
  background: #fff;
}

.music-list .item{
  display: flex;
  padding: 10px;
}

.music-list .item .num{
  flex:1;
  font-size: 10px;
  color: #999;
  margin-top: 10px;
}

.music-list .item .musicinfo{
  flex: 5;
}

.music-list .item .name{
  font-size: 13px;
  display: block;
}

.music-list .item .author{
  font-size: 10px;
  color: #999;
}

.music-list .item .icon{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin-left: 20px;
}
